<view class="container">
  <form bindsubmit="bindSave">
    <view class="form-box">
      <view class="row-wrap">
        <view class="label">姓名</view>
        <view class="label-right">
          <input name="realName" class="input" type="text" placeholder="姓名" value="{{userInfo.realName}}" />
        </view>
      </view>
      <view class="row-wrap">
        <view class="label">手机号码</view>
        <view class="label-right">
          <input name="mobile" class="input" maxlength="11" type="number" placeholder="11位手机号码" value="{{userInfo.mobile}}" />
        </view>
      </view>
      <view class="row-wrap">
        <view class="label">地址</view>
        <view class="label-right">
          <input name="schoolName" class="input" type="text" placeholder="学院" value="{{userInfo.schoolName}}" />
        </view>
      </view>
      <view class="row-wrap">
        <view class="label">学校</view>
        <view class="label-right">
          <input name="userNo" class="input" type="text" placeholder="学号" value="{{userInfo.userNo}}" />
        </view>
      </view>
    </view>
    <button type="warn" class="save-btn" formType="submit">保存</button>
  </form>
</view>