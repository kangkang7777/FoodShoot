/* pages/news-detail/index.wxss */

.weui-footer_fixed-bottom {
  bottom: 0;
}

.footer-box {
  height: 80rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  align-items: center;
}

.footer-box image {
  width: 68rpx;
  height: 68rpx;
  margin-right: 20rpx;
}

.news-container {
  background: #fff;
  padding: 15rpx;
}

.news-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.news-summary {
  font-size: 24rpx;
  color: #999;
}

.news-liked {
  font-size: 24rpx;
  text-align: right;
  color: #999;
}

.news-image {
  width: 100%;
  height: 220rpx;
}

.news-date {
  display: flex;
  justify-content: space-between;
}

.comment {
  width: 534rpx;
  font-size: 28rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #eaeaea;
  margin-right: 20rpx;
  margin-left: 20rpx;
  align-self: center;
  text-align: center;
  color: #888;
  border-radius: 10rpx;
}

.news-content {
  font-size: 26rpx;
}

.share {
  width: 68rpx;
  height: 68rpx;
  padding: 0;
  background: #fff;
  border: none;
  margin-right: 20rpx;
}

video{
  width: 100%
}

.user-info {
  margin-bottom: 20rpx;
  align-items: center;
}

.user-info .info{
  margin-left: 10rpx;
  flex: 1
}

.user-info .nick-name {
  font-size: 32rpx;
}

.create-time {
  font-size: 28rpx;
  color: #999;
}

.user-info image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.list-item {
  padding: 15rpx;
  border-bottom: 1rpx solid #eee;
  background: #fff
}

.content {
  font-size: 30rpx;
}

.topic-pic{
  /* width: 220rpx;
  height: 220rpx; */
}

.follow image{
  width: 68rpx;
  height: 68rpx;
}